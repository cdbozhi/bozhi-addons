{
  "name": "cdbozhi/bozhi-addons",
    "description": "bozhiadmin addons",
    "type": "library",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "arzn",
            "email": "1314778@qq.com"
        }
    ],
    "require": {
        "php": ">=7.0.0"
    },
  "autoload": {
    "psr-4": {
      "bozhi\\": "src/"
    },
    "files": [
      "src/helper.php",
      "src/form.php"
    ]
  },
  "extra": {
    "think": {
      "services": [
        "bozhi\\addons\\Service"
      ],
      "config":{
        "addons": "src/config.php",
        "api": "src/api.php",
        "console": "src/console.php"
      }
    }
  },
  "scripts": {
    "post-install-cmd": [
      "php think addons:config",
      "php think auth:config"
    ]
  }
}